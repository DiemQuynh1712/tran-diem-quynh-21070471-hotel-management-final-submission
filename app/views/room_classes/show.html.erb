<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Room_class</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to room_classes_path, class: button_class(theme: "transparent") do %>
      All Room_classes
      <% end %>
      <%= link_to edit_room_class_path(@room_class), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Room class:</p>
        <p><%= @room_class.room_class %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @room_class.description %></p>
      </li>
  </ul>
</div>
